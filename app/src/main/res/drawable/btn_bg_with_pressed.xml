<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <color android:color="#F3EBEB"/>
        <shape android:shape="rectangle">
            <solid android:color="#F3EBEB"/>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#70707070"/>

        </shape>

    </item>

    <item android:state_pressed="true"
        >
        <color android:color="@color/tv2_color"/>
        <shape android:shape="rectangle">
            <solid android:color="@color/tv2_color"/>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="@color/tv2_color"/>

        </shape>
    </item>

</selector>